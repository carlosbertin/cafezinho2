<h1> Lista de Produtos </h1>
<table border=1>
    <tr>
        <th>id</th>
        <th>nome</th>
        <th>unidade</th>
        <th>observação</th>
        <th>mostrar</th>
        <th>deletar</th>
        <th>editar</th>
    </tr>
    <% @produtos.each do |produto| %>
    <tr>
        <td><%= produto.id %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.unidade %></td>
        <td><%= produto.observacao %> </td>
        <td><%= link_to 'Mostrar', action: 'show', id: produto %> </td>
        <td><%= link_to "Delete", {action: 'destroy', id: produto}, method: :delete, data: { confirm: "Deseja realmente deletar este produto ?"} %></td>
        <td><%= link_to 'Editar', action: 'edit', id: produto %></td>
    </tr>
    <% end %>
</table>

