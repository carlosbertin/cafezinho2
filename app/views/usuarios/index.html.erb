<h1> Lista de Usuários </h1>
<table border=1>
    <tr>
        <th>id</th>
        <th>nome</th>
        <th>cpf</th>
        <th>data_desativacao</th>
        <th>mostrar</th>
        <th>deletar</th>
        <th>editar</th>
    </tr>
    <% @usuarios.each do |usuario| %>
    <tr>
        <td><%= usuario.id %></td>
        <td><%= usuario.nome %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.data_desativacao %> </td>
        <td><%= link_to 'Mostrar', action: 'show', id: usuario %> </td>
        <td><%= link_to 'Delete', {action: 'destroy', id: usuario}, method: :delete, data: { confirm: 'Deseja realmente deletar este usuário ?'} %></td>
        <td><%= link_to 'Editar', action: 'edit', id: usuario %></td>
    </tr>
    <% end %>
</table>

